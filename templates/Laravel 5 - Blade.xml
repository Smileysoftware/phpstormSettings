<templateSet group="Laravel 5 - Blade">
  <template name="bladeform" value="{!! Form::open() !!}&#10;&#10;    $END$&#10;&#10;{!! Form::close() !!}" description="New blade form" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeforeach" value="/*&#10;* Loop through the $things$ array&#10;*/&#10;@foreach ( $$$thing$s as $$$thing$ )&#10;&#10;    $END$&#10;&#10;@endforeach" description="Blade Foreach" toReformat="true" toShortenFQNames="true">
    <variable name="things" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="thing" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladesubmit" value="&lt;p&gt;&#10;    {!! Form::submit('$label$') !!}&#10;&lt;/p&gt;" description="Blade form submit button" toReformat="false" toShortenFQNames="true">
    <variable name="label" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeerrors" value="@if (count( $errors ) &gt; 0)&#10;    &lt;div class=&quot;form-errors&quot;&gt;&#10;&#10;        &lt;p&gt;&#10;            &lt;strong&gt;Whoops!&lt;/strong&gt; Something went wrong.&#10;        &lt;/p&gt;&#10;&#10;        &lt;ul&gt;&#10;            @foreach ( $errors-&gt;all() as $error)&#10;            &lt;li&gt;{{ $error }}&lt;/li&gt;&#10;            @endforeach&#10;        &lt;/ul&gt;&#10;    &lt;/div&gt;&#10;@endif" description="Blade Error Block" toReformat="true" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeinclude" value="@include('$cursor$')" description="Blade Include" toReformat="false" toShortenFQNames="true">
    <variable name="cursor" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeyield" value="@yield('content')" description="Blade Yield" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeextend" value="@extends('app')" description="Blade Extend" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladesection" value="@section('content')&#10;&#10;    $END$&#10;    &#10;@stop" description="Blade Section" toReformat="false" toShortenFQNames="true">
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeformfield" value="&lt;p class='$rowCLass$'&gt;&#10;    {{ Form::label('$name$', '$Nice_name$') }}&#10;    {{ Form::$type$('$name$', null , array( 'class' =&gt; '$inputClass$')) }}&#10;    {{ $errors-&gt;first('$name$', '&lt;p class=&quot;$errorClass$&quot;&gt;:message&lt;/p&gt;') }}&#10;&lt;/p&gt;" description="Blade Form Field" toReformat="false" toShortenFQNames="true">
    <variable name="name" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="type" expression="" defaultValue="text" alwaysStopAt="true" />
    <variable name="Nice_name" expression="capitalize(name)" defaultValue="" alwaysStopAt="true" />
    <variable name="rowCLass" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="inputClass" expression="" defaultValue="" alwaysStopAt="true" />
    <variable name="errorClass" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeif" value="@if ( $condition$ )&#10;&#10;&#9;$END$&#10;&#10;@endif" description="Blade IF" toReformat="false" toShortenFQNames="true">
    <variable name="condition" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeifelse" value="@if ( $condition$ )&#10;&#10;&#9;$END$&#10;&#9;&#10;@else&#10;&#10;    &#10;&#10;@endif" description="Blade If Else" toReformat="false" toShortenFQNames="true">
    <variable name="condition" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladeunless" value="@unless ( $condition$ )&#10;    &#10;    $END$&#10;    &#10;@endunless" description="Blade Unless" toReformat="false" toShortenFQNames="true">
    <variable name="condition" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladefor" value="@for ($i = 0; $i &lt; $counter$; $i++)&#10;&#10;    $END$&#10;&#10;@endfor" description="Blade For" toReformat="false" toShortenFQNames="true">
    <variable name="counter" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladewhile" value="@while ( $condition$ )&#10;    &#10;    $END$&#10;    &#10;@endwhile" description="Blade While" toReformat="false" toShortenFQNames="true">
    <variable name="condition" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="bladecomment" value="{{-- $comment$ --}}" description="Blade Comment" toReformat="false" toShortenFQNames="true">
    <variable name="comment" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="HTML" value="true" />
      <option name="PHP" value="true" />
    </context>
  </template>
  <template name="trans" value="{{ trans('$bit$') }}" description="Translations" toReformat="false" toShortenFQNames="true">
    <variable name="bit" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="OTHER" value="true" />
    </context>
  </template>
</templateSet>